extends ../layout

block content
  a(href="teas/new" class="pull-right btn btn-success") Add More Teas
  h1(class="page-header") Teas


  table(class="table")
    thead
      th Tea Name
      th Country
      th Price
      th Reorderable
    tbody
      each tea in teas
        tr
          td= tea.name
          td= tea.country
          td= tea.price
          td= tea.reorderable ? "Yes" : "No"
